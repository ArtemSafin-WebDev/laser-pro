mixin header(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +header('mod-name1, mod-name2')

  -
      // список модификаторов
      var allMods = '';
      if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' header--' + modsList[i].trim();
      }
    }

  header.header.wow.fadeInDown.hide(class= allMods data-controller='header' data-wow-offset="100" data-wow-delay=".1s")
    .header__overlay.js-header-overlay
    .container
      .header__wrap
        .header__left
          .header__logo
            a.header__logo-link(href="#")
              img(src="assets/img/logo.svg", alt="logo")
          ul.header__nav
            li.header__nav-item
              a.header__nav-link(href="#") Услуги
            li.header__nav-item
              a.header__nav-link(href="#") О франшизе
            li.header__nav-item
              a.header__nav-link(href="#") Контакты
        .header__right
          .header__social
            ul.header__social-list
              li.header__social-item
                a.header__social-link(href="#" target="_blank")
                  +icon('fb', 'fb')
              li.header__social-item
                a.header__social-link(href="#" target="_blank")
                  +icon('vk', 'vk')
              li.header__social-item
                a.header__social-link(href="#" target="_blank")
                  +icon('twitter', 'twitter')
              li.header__social-item
                a.header__social-link(href="#" target="_blank")
                  +icon('ok', 'ok')
          .header__phone
            a.header__phone-link(href="tel:+79120145691") +7 912 014-56-91
          .header__callback
            a.btn.header__callback-btn.js-popup-open(href="#popup-subscribe") Связаться
          .header__menu
            .header__menu-btn.js-header-btn
              span.line
            .header__menu-drop.js-header-drop
              ul.header__nav.header__nav--mob
                li.header__nav-item
                  a.header__nav-link(href="#") Услуги
                li.header__nav-item
                  a.header__nav-link(href="#") О франшизе
                li.header__nav-item
                  a.header__nav-link(href="#") Контакты
              .header__callback.header__callback--mob
                a.btn.header__callback-btn.js-popup-open(href="#popup-subscribe") Связаться
              .header__social.header__social--mob
                ul.header__social-list
                  li.header__social-item
                    a.header__social-link(href="#" target="_blank")
                      +icon('fb', 'fb')
                  li.header__social-item
                    a.header__social-link(href="#" target="_blank")
                      +icon('vk', 'vk')
                  li.header__social-item
                    a.header__social-link(href="#" target="_blank")
                      +icon('twitter', 'twitter')
                  li.header__social-item
